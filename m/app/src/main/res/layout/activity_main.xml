<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.oxygen.m.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/isSpace"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tìm kiếm"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/btn_add"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Thêm"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_icon"
            android:layout_width="295dp"
            android:layout_height="147dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:src="@drawable/a"
            android:padding="5dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Thành phố" />

            <TextView
                android:id="@+id/temp_am"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Nhiệt độ sáng" />

            <TextView
                android:id="@+id/temp_pm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Nhiệt độ tối" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Độ ẩm" />

            <TextView
                android:id="@+id/wind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Hướng gió" />

            <TextView
                android:id="@+id/clouds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Mây" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_day1"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/a"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sáng"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tối"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_day2"
                android:layout_width="match_parent"
                android:src="@drawable/b"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sáng"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tối"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_day3"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/c"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sáng"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tối"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_day4"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/d"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sáng"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tối"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_day5"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/e"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sáng"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tối"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
