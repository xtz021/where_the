<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.oxygen.m.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/btn_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tìm kiếm"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_add"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="xem danh sach"
            android:onClick="btn_view_list"
            android:textAlignment="center"
            tools:ignore="OnClick" />
    </LinearLayout>

    <TextView
        android:id="@+id/DataTimeUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Ngày" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_icon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/a01d" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Thành phố: " />

            <TextView
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Nhiệt độ: " />


            <TextView
                android:id="@+id/humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Độ ẩm: " />

            <TextView
                android:id="@+id/wind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Độ gió: " />

            <TextView
                android:id="@+id/clouds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Mây: " />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="5">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="day1"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/icon_day1"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/a01d" />

            <TextView
                android:id="@+id/tempday1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Sáng"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tempnight1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tối"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="day2"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/icon_day2"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/a02d" />

            <TextView
                android:id="@+id/tempday2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Sáng"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tempnight2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tối"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="day3"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/icon_day3"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/a03d" />

            <TextView
                android:id="@+id/tempday3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Sáng"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tempnight3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tối"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="day4"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/icon_day4"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/a05d" />

            <TextView
                android:id="@+id/tempday4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Sáng"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tempnight4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tối"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="day5"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/icon_day5"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/a06d" />

            <TextView
                android:id="@+id/tempday5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Sáng"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tempnight5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tối"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
